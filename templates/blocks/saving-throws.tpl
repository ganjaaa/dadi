        <tr>
            <td>Dexterity</td>
            <td>{$scores.modDexterity}</td>
        </tr>
        <tr>
            <td>Constitution</td>
            <td>{$scores.modConstitution}</td>
        </tr>
        <tr>
            <td>Intelligence</td>
            <td>{$scores.modIntelligence}</td>
        </tr>
