<?xml version="1.0" encoding="UTF-8"?>
<root>
    <classes>
        <class>
            <name>Item</name>
            <table>dnd_item</table>
            <namespace>DND\Objects</namespace>
            <includes></includes>
            <uses></uses>
            <extends></extends>
            <implements>\DND\Interfaces\Objects</implements>
            <constants>
                <constant id="IDX_RARE_COMMON">0</constant>
                <constant id="IDX_RARE_UNCOMMON">1</constant>
                <constant id="IDX_RARE_RARE">2</constant>
                <constant id="IDX_RARE_VERY_RARE">3</constant>
                <constant id="IDX_RARE_EPIC">4</constant>
                <constant id="IDX_RARE_LEGENDARY">5</constant>
                <constant id="IDX_RARE_UNIQUE">6</constant>
                <constant id="IDX_EQUIPT_NONE">0</constant>
                <constant id="IDX_EQUIPT_SLOT_QUIVER">1</constant>
                <constant id="IDX_EQUIPT_SLOT_HELMET">2</constant>
                <constant id="IDX_EQUIPT_SLOT_CAPE">3</constant>
                <constant id="IDX_EQUIPT_SLOT_NECKLACE">4</constant>
                <constant id="IDX_EQUIPT_SLOT_GLOVES">5</constant>
                <constant id="IDX_EQUIPT_SLOT_RING">6</constant>
                <constant id="IDX_EQUIPT_SLOT_ARMOR">7</constant>
                <constant id="IDX_EQUIPT_SLOT_WEAPON">8</constant>
                <constant id="IDX_EQUIPT_SLOT_OFF_WEAPON">9</constant>
                <constant id="IDX_EQUIPT_SLOT_BELT">10</constant>
                <constant id="IDX_EQUIPT_SLOT_BOOTS">11</constant>
                <constant id="IDX_TYPE_MONEY">"$"</constant>
                <constant id="IDX_TYPE_HEAVY_ARMOR">"HA"</constant>
                <constant id="IDX_TYPE_LIGHT_ARMOR">"LA"</constant>
                <constant id="IDX_TYPE_MEDIUM_ARMOR">"MA"</constant>
                <constant id="IDX_TYPE_AMONITION">"A"</constant>
                <constant id="IDX_TYPE_GATGET">"G"</constant>
                <constant id="IDX_TYPE_WEAR">"W"</constant>
                <constant id="IDX_TYPE_SCHILD">"S"</constant>
                <constant id="IDX_TYPE_MELEE_WEAPON">"M"</constant>
                <constant id="IDX_TYPE_RANGE_WEAPON">"R"</constant>
                <constant id="IDX_TYPE_POTION">"P"</constant>
                <constant id="IDX_TYPE_ROD">"RD"</constant>
                <constant id="IDX_TYPE_RING">"RG"</constant>
                <constant id="IDX_TYPE_SCROLL">"SC"</constant>
                <constant id="IDX_TYPE_STAFF">"ST"</constant>
                <constant id="IDX_TYPE_WAND">"WD"</constant>
                <constant id="IDX_STACKABLE">1</constant>
                <constant id="IDX_UNSTACKABLE">0</constant>
            </constants>
            <variables>
                <variable id="name">varchar(255)</variable>
                <variable id="description">text</variable>
                <variable id="weight">float</variable>
                <variable id="priceCP">int</variable>
                <variable id="priceSP">int</variable>
                <variable id="priceEP">int</variable>
                <variable id="priceGP">int</variable>
                <variable id="pricePP">int</variable>
                <variable id="magic">int(1)</variable>
                <variable id="type">varchar(255)</variable>
                <variable id="rarity">varchar(255)</variable>
                <variable id="ac">int</variable>
                <variable id="strength">int</variable>
                <variable id="stealth">int</variable>
                <variable id="modifier">varchar(255)</variable>
                <variable id="roll">varchar(255)</variable>
                <variable id="dmg1">varchar(255)</variable>
                <variable id="dmg2">varchar(255)</variable>
                <variable id="dmgType">varchar(255)</variable>
                <variable id="property">varchar(255)</variable>
                <variable id="range">varchar(255)</variable>
                <variable id="wearable">int</variable>
                <variable id="cursed">int(1)</variable>
                <variable id="stackable">int(1)</variable>
            </variables>
            <forms>
                <form id="addForm" title="Item anlegen">
                    <fields>
                        <field label="Name" id="name" var="name" type="text" placeholder="Welt von DND" />
                        <field label="Weight" id="weight" var="weight" type="text" placeholder="" />
                    </fields>
                    <fields>
                        <field label="Description" id="description" var="description" type="textarea" placeholder="" />
                    </fields>
                    <fields>
                        <field label="Price CP" id="priceCP" var="priceCP" type="text" placeholder="0" />
                        <field label="Price SP" id="priceSP" var="priceSP" type="text" placeholder="0" />
                        <field label="Price EP" id="priceEP" var="priceEP" type="text" placeholder="0" />
                        <field label="Price GP" id="priceGP" var="priceGP" type="text" placeholder="0" />
                        <field label="Price PP" id="pricePP" var="pricePP" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Magic" id="magic" var="magic" type="select" type-value="0=Nein|1=Ja" placeholder="0" />
                        <field label="Type" id="type" var="type" type="select" placeholder="0" type-value="$=Money|HA=Heavy_Armor|LA=Light_Armor|MA=Medium_Armor|A=Ammunition|G=Adventuring_Gear|W=Wondrous|S=Schild|M=Melee_Weapon|R=Range_Weapons|P=Potion|RD=Rod|RG=Ring|SC=Scroll|ST=Staff|WD=Wand" />
                        <field label="Rarity" id="rarity" var="rarity" type="select" placeholder="0" type-value="0=COMMON|1=UNCOMMON|2=RARE|3=VERY_RARE|4=EPIC|5=LEGENDARY|6=UNIQUE" />                                        
                        <field label="AC" id="ac" var="ac" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Strength" id="strength" var="strength" type="text" placeholder="0" />
                        <field label="Stealth" id="stealth" var="stealth" type="text" placeholder="0" />
                        <field label="Modifier" id="modifier" var="modifier" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Roll" id="roll" var="roll" type="text" placeholder="0" />
                        <field label="Dmg1" id="dmg1" var="dmg1" type="text" placeholder="0" />
                        <field label="Dmg2" id="dmg2" var="dmg2" type="text" placeholder="0" />
                        <field label="DmgType" id="dmgType" var="dmgType" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Property" id="property" var="property" type="text" placeholder="0" />
                        <field label="Range" id="range" var="range" type="text" placeholder="0" />
                        <field label="Wearable" id="wearable" var="wearable" type="select" type-value="0=NONE|1=QUIVER|2=HELMET|3=CAPE|4=NECKLACE|5=GLOVES|6=RING|7=ARMOR|8=WEAPON|9=OFF HAND|10=BELT|11=BOOTS" />
                        <field label="Cursed" id="cursed" var="cursed" type="select" type-value="0=Nein|1=Ja" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Stackable" id="stackable" var="stackable" type="select" type-value="0=Nein|1=Ja" placeholder="0" />
                    </fields>
                    
                </form>
                <form id="editForm" title="Item bearbeiten">
                    <fields>
                        <field label="Name" id="name" var="name" type="text" placeholder="Welt von DND" />
                        <field label="Description" id="description" var="description" type="textarea" placeholder="" />
                        <field label="Weight" id="weight" var="weight" type="text" placeholder="" />
                    </fields>
                    <fields>
                        <field label="Price CP" id="priceCP" var="priceCP" type="text" placeholder="0" />
                        <field label="Price SP" id="priceSP" var="priceSP" type="text" placeholder="0" />
                        <field label="Price EP" id="priceEP" var="priceEP" type="text" placeholder="0" />
                        <field label="Price GP" id="priceGP" var="priceGP" type="text" placeholder="0" />
                        <field label="Price PP" id="pricePP" var="pricePP" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Magic" id="magic" var="magic" type="select" type-value="0=Nein|1=Ja" placeholder="0" />
                        <field label="Type" id="type" var="type" type="select" placeholder="0" type-value="$=Money|HA=Heavy_Armor|LA=Light_Armor|MA=Medium_Armor|A=Ammunition|G=Adventuring_Gear|W=Wondrous|S=Schild|M=Melee_Weapon|R=Range_Weapons|P=Potion|RD=Rod|RG=Ring|SC=Scroll|ST=Staff|WD=Wand" />
                        <field label="Rarity" id="rarity" var="rarity" type="select" placeholder="0" type-value="0=COMMON|1=UNCOMMON|2=RARE|3=VERY_RARE|4=EPIC|5=LEGENDARY|6=UNIQUE" />                                        
                        <field label="AC" id="ac" var="ac" type="text" placeholder="0" default="0" />
                    </fields>
                    <fields>
                        <field label="Strength" id="strength" var="strength" type="text" placeholder="0" />
                        <field label="Stealth" id="stealth" var="stealth" type="text" placeholder="0" />
                        <field label="Modifier" id="modifier" var="modifier" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Roll" id="roll" var="roll" type="text" placeholder="0" />
                        <field label="Dmg1" id="dmg1" var="dmg1" type="text" placeholder="0" />
                        <field label="Dmg2" id="dmg2" var="dmg2" type="text" placeholder="0" />
                        <field label="DmgType" id="dmgType" var="dmgType" type="text" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Property" id="property" var="property" type="text" placeholder="0" />
                        <field label="Range" id="range" var="range" type="text" placeholder="0" />
                        <field label="Wearable" id="wearable" var="wearable" type="select" type-value="0=NONE|1=QUIVER|2=HELMET|3=CAPE|4=NECKLACE|5=GLOVES|6=RING|7=ARMOR|8=WEAPON|9=OFF HAND|10=BELT|11=BOOTS" />
                        <field label="Cursed" id="cursed" var="cursed" type="select" type-value="0=Nein|1=Ja" placeholder="0" />
                    </fields>
                    <fields>
                        <field label="Stackable" id="stackable" var="stackable" type="select" type-value="0=Nein|1=Ja" placeholder="0" />
                    </fields>
                </form>
            </forms>
            <functions></functions>
            <override></override>
        </class>
    </classes>
</root>
