<?xml version="1.0" encoding="UTF-8"?>
<root>
    <classes>
        <class>
            <name>Spellbook</name>
            <table>dnd_spellbook</table>
            <namespace>DND\Objects</namespace>
            <includes></includes>
            <uses></uses>
            <extends></extends>
            <implements>\DND\Interfaces\Objects</implements>
            <constants>
                <constant id="IDX_SPELL_USED">1</constant>
                <constant id="IDX_SPELL_UNUSED">0</constant>
            </constants>
            <variables>
                <variable id="characterId">int</variable>
                <variable id="spellId">int</variable>
                <variable id="slot">int</variable>
                <variable id="used">int(1)</variable>
                <variable id="object" virtual="1" default="0">text</variable>
            </variables>
            <forms>
                <form id="addForm" title="Spellbook Object anlegen">
                    <fields>
                        <field label="" id="characterId" var="characterId" type="hidden" placeholder="" />
                    </fields>
                    <fields>
                        <field label="Zauber" id="spellId" var="spellId" type="ajax-select" url="/v2/gm/spell" />
                    </fields>
                    <fields>
                        <field label="Slot" id="slot" var="slot" type="text" placeholder="" />
                        <field label="Benutzt" id="used" var="used" type="text" placeholder="1" />
                    </fields>
                </form>
                <form id="editForm" title="Spellbook Object bearbeiten">
                    <fields>
                        <field label="Zauber" id="spellId" var="spellId" type="ajax-select" url="/v2/gm/spell" />
                    </fields>
                    <fields>
                        <field label="Slot" id="slot" var="slot" type="text" placeholder="" />
                        <field label="Benutzt" id="used" var="used" type="text" placeholder="1" />
                    </fields>
                </form>
            </forms>
            <functions>
                <function id="getDisplayData"><![CDATA[return array(
        "id" => $this->id, 
        "characterId" => $this->characterId, 
        "spellId" => $this->spellId, 
        "slot" => $this->slot, 
        "used" => $this->used, 
        "object" => is_object($this->object)? $this->object->getAjax() : null
        );]]></function>
            </functions>
            <override>

            </override>
        </class>
    </classes>
</root>
